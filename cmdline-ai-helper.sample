# Default provider (openai, anthropic, google, ollama)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-latest

# OpenAI settings
OPENAI_API_KEY=your-key-here
OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
# model examples: gpt-4o, gpt-4o-mini

# Anthropic settings
ANTHROPIC_API_KEY=your-key-here
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1/messages
# model examples: claude-3-5-sonnet-latest, claude-3-5-haiku-latest

# Google settings
GOOGLE_API_KEY=your-key-here
GOOGLE_ENDPOINT=https://generativelanguage.googleapis.com/v1/models/gemini-pro:generateContent
# model examples: gemini-pro

# Ollama settings
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.1:8b